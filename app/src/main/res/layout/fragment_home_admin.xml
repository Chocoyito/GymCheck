<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeAdminFragment"
    android:background="@drawable/gradiant">


 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            app:titleCentered="true"
            android:layout_height="?attr/actionBarSize"
            app:title="GYM CHECK"
            app:titleTextColor="@color/white"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/baseline_menu"
            />

    </com.google.android.material.appbar.AppBarLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="vertical">
        <com.google.android.material.search.SearchBar
            android:id="@+id/searchBar"
            style="@style/Widget.Material3.SearchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar clientes"
            android:backgroundTint="@color/bgSearchBar"
            />

        <Button
            android:layout_marginTop="35dp"
            style="@style/Widget.Material3.Button.Icon"
            android:id="@+id/btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Agregar cliente"
            android:layout_gravity="center"
            app:icon ="@drawable/baseline_add_24"
            android:textColor="@color/white"
            android:backgroundTint="@color/btnOscuro"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        >
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:background="@color/btnOscuro"
            android:id="@+id/bottom_navigation"
            android:forceDarkAllowed="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:menu="@menu/bottom_nav" />
    </LinearLayout>

</FrameLayout>